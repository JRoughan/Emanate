<UserControl x:Class="Emanate.Service.Admin.Controls.TimeRangeSlider"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="root">

    <Grid>
        <Slider x:Name="LowerSlider" VerticalAlignment="Top" IsEnabled="{Binding ElementName=root, Path=IsEnabled, Mode=TwoWay}"
                Minimum="0"
                Maximum="23"
                Value="{Binding ElementName=root, Path=LowerValue, Mode=OneWay}"
                Margin="0,0,10,0" 
                SmallChange="1" 
                LargeChange="4" 
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                />

        <Slider x:Name="UpperSlider" IsEnabled="{Binding ElementName=root, Path=IsEnabled, Mode=TwoWay}"
                Minimum="1"
                Maximum="24"
                Value="{Binding ElementName=root, Path=UpperValue, Mode=OneWay}"
                Margin="10,0,0,0"
                SmallChange="1" 
                LargeChange="4" 
                TickFrequency="1"
                IsSnapToTickEnabled="True"
                TickPlacement="BottomRight"
                IsSelectionRangeEnabled="True"
                SelectionStart="{Binding ElementName=root, Path=LowerValue}"
                SelectionEnd="{Binding ElementName=root, Path=UpperValue}"
                />
    </Grid>
</UserControl>