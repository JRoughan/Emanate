<core:InputSelector x:Class="Emanate.TeamCity.InputSelector.InputSelectorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:inputSelector="clr-namespace:Emanate.TeamCity.InputSelector"
                                      xmlns:core="clr-namespace:Emanate.Core;assembly=Emanate.Core"
                                      mc:Ignorable="d" 
             x:Name="root"
             d:DataContext="{d:DesignInstance inputSelector:InputSelectorViewModel}"
             d:DesignHeight="300" d:DesignWidth="300">
    <TreeView ItemsSource="{Binding Projects}">
        <TreeView.ItemTemplate>
            <HierarchicalDataTemplate ItemsSource="{Binding Configurations}">
                <DockPanel>
                    <ComboBox DockPanel.Dock="Right" ItemsSource="{Binding ElementName=root, Path=DataContext.AvailableProfiles}" SelectedItem="{Binding Profile}" Margin="100,0,0,0" IsEnabled="{Binding IsSelected}" />
                    <CheckBox Content="{Binding Name}" IsChecked="{Binding IsSelected}" />
                </DockPanel>
            </HierarchicalDataTemplate>
        </TreeView.ItemTemplate>
    </TreeView>
</core:InputSelector>
